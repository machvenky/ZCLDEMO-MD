<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Table id="idProductsTable" inset="false" items="{ path: '/ProductSet' }">
		<columns>
			<Column width="12em">
				<Text text="Product"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Product Name"/>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
				<Text text="Category"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{ProductID}"/>
					<Text text="{Name}"/>
					<Text text="{Category}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>